@model List<Series>
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="Index" method="GET" id="frmSearchSeries">
                <input type="text" name="menuKey" value="CM" hidden/>
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="text-info">Search</h3>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="txtSName">Name</label>
                            <input type="text" id="txtSName" name="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="txtSVolumns">Volumns</label>
                            <input type="number" id="txtSVolumns" name="Volumns" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="d-flex justify-content-end">
                            <div>
                                <button class="btn btn-info text-white"><i class="bi bi-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-12 mt-4">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-info">List Categories</h3>
                </div>
                <div class="col-lg-12">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Volumns</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @(i+1)
                                    </td>
                                    <td>
                                        @(Model[i].Name)
                                    </td>
                                    <td>
                                        @(Model[i].Volumns)
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center" style="column-gap: 4px;">
                                            <button class="btn btn-danger btn-sm" data-seriesID="@(Model[i].ID)" ><i class="bi bi-trash"></i></button>
                                            <a href="@(RouteConstant.ADMIN_CATEGORIES_MODIFY)?menuKey=CM&seriesID=@(Model[i].ID)" class="btn btn-info btn-sm text-white"><i class="bi bi-pencil-square"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>