@model Genre

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-info">Modify Genre</h3>
        </div>
        <div class="col-lg-12">
            <form asp-action="Modify" method="POST" id="frmModifyGenre">
                <input type="hidden" name="GenreID" value="@(Model.ID)" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label" for="txtName">Name</label>
                            <input type="text" id="txtName" name="Name" value="@(Model.Name)" class="form-control" />
                        </div>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="d-flex justify-content-end">
                            <div>
                                <button type="submit" class="btn btn-info text-white">Save <i class="bi bi-floppy"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
