@model List<Role>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Role Name</th>
                        <th scope="col">Manipulation</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">@(i+1)</th>
                            <td>@(Model[i].Name)</td>
                            <td>
                                <div class="d-flex align-items-center" style="column-gap: 4px;">
                                    <a href="@(RouteConstant.ADMIN_ROLES_MODIFY)?roleID=@(Model[i].Id)" class="btn btn-warning btn-sm" ><i class="bi bi-pencil-square"></i></a>
                                    <button class="btn btn-danger btn-sm btnDeleteBook" data-RoleID="@(Model[i].Id)"><i class="bi bi-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>