@{
    ViewData["Title"] = ViewBag.Service;
}
<div>
    <div class="container"> 
        <div class="breadcrumb-wrap">
            <a href="@(RouteConstant.HOME)">Home</a>
            <span>&#10095;</span>
            <p>@(ViewBag.Service)</p>
            
        </div>
        <div class="header-wrap">

        <h3 class="header">@(ViewBag.Service)</h3>
        <div class="wrap-btn">
                <button class="active"><i class="bi bi-grid"> </i></button>
                <button><i class="bi bi-list"> </i></button>
        </div>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <div class="side-bar">
                    <div class="side-category">
                        <h6>PRODUCT SERIES</h6>
                        
                        <div class="side-bar-item">
                            <div class="side-bar-item-wrap-title">
                            
                                <p><strong>Books</strong></p>
                                <span class="wrap-icon"><i class="bi bi-chevron-down "></i></span>

                            </div>
                            <div class="side-bar-item-child">
                                @foreach (var seriesName in ViewBag.Series)
                                {
                                    <div class="new-releases-child">
                                        <span class="right-icon"><i class="bi bi-chevron-double-right"></i></span>
                                        <a href="@(RouteConstant.LIST)?Service=@seriesName">@seriesName</a>
                                    </div>
                                }
                            </div>
                            
                        </div>
                        <div class="side-bar-item">
                            <div class="side-bar-item-wrap-title">
                                <p><strong>Magazine</strong></p>
                                <span class="wrap-icon"><i class="bi bi-chevron-down"></i></span>
                            </div>
                            <div class="side-bar-item-child">

                            <div class="new-releases-child">
                                <span class="right-icon"><i class="bi bi-chevron-double-right"></i></span>
                                <a href="@(RouteConstant.LIST)?Service=BestSellers">Liberated Saigon</a>
                            </div>

                            </div>
                        </div>

                    </div>
                    <div class="side-price">
                        <h6>PRICE RANGE</h6>
                        <div >
                            <div class="side-price-item">
                                <p>Price Range:</p>
                                <span>10$</span>
                                <span>-</span>
                                <span>500$</span>
                            </div>
                            <input type="range"/> 
                        </div>
                        
                       
                    </div>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="row">
                    @foreach (var book in ViewBag.Books)
                    {
                        <div class="col-lg-3">
                            <div class="card-product">
                                <div class="card-product-heading">
                                    <a href="#">
                                        <img src="@book.Image" alt="@book.Title" />
                                    </a>
                                    <button>
                                        <i class="bi bi-suit-heart"></i>
                                    </button>
                                </div>
                                <div class="card-product-content">
                                    <h6 class="card-product-title">
                                        <a href="#">@book.Title</a>
                                    </h6>
                                    <div class="card-product-desc">
                                        <span><strong>Book Author: </strong></span>
                                        <span>@book.Author</span>
                                    </div>
                                    <div class="card-product-wrap-price">
                                        <span class="card-product-current-price">@book.Price $</span>
                                        <span class="card-product-old-price">@book.OldPrice $</span>
                                    </div>
                                </div>
                                <div class="card-product-footer">
                                    <div class="card-product-wrap-btn">
                                        <button class="card-product-btn kap-btn kap-btn-primary">BUY</button>
                                        <button class="card-product-btn kap-btn kap-btn-secondary">ADD TO CART</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

